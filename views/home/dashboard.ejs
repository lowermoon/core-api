<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../head'); %>
    <style>
        #sidebar_kiri.closed #sidebar_title {
            transition: all .3s;
        }

        #sidebar_kiri {
            transition: all .3s;
        }

        #sidebar_kiri.closed {
            width: 100px;
            transition: all .3s;
        }
        
    </style>
</head>
<body class="bg-white flex">
    <aside id="sidebar_kiri" class="relative bg-zinc-800 w-60 h-screen p-5">
        <div class="flex flex-col items-center justify-center w-full h-auto">
            <img id="sidebar_logo" src="https://cdn-icons-png.flaticon.com/128/3836/3836558.png" alt="">
            <h1 id="sidebar_title" class="font-bold font-varela text-white text-2xl">
                Nama App
            </h1>
        </div>
        <div class="absolute top-0 right-0 w-16 h-16 translate-y-12 translate-x-8 bg-zinc-800 rounded-2xl flex items-center justify-center">
            <button id="sidebar_toggle" class="text-white p-2 rounded-lg hover:bg-white hover:text-zinc-800 transition-all duration-300">
                <svg class="w-6 h-6 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/></svg>
            </button>
        </div>
        <div id="sidebar_content" class="w-full h-full py-5 px-3 space-y-5">
            <a href="/dashboard" id="sidebar_content_item" class="flex items-center gap-4 font-varela text-white font-bold border border-white/0 hover:border-white w-full p-2 rounded-lg transition-all duration-300">
                <svg class="w-5 h-5 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path d="M20 9V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v7h20ZM0 11v2a2 2 0 0 0 2 2h7v3H6a1 1 0 0 0 0 2h8a1 1 0 0 0 0-2h-3v-3h7a2 2 0 0 0 2-2v-2H0Z"/></svg>
                <span id="sidebar_content_title">
                    Dashboard
                </span>
            </a>
            <a href="/dashboard" id="sidebar_content_item" class="flex items-center gap-4 font-varela text-white font-bold border border-white/0 hover:border-white w-full p-2 rounded-lg transition-all duration-300">
                <svg class="w-5 h-5 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path d="M20 9V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v7h20ZM0 11v2a2 2 0 0 0 2 2h7v3H6a1 1 0 0 0 0 2h8a1 1 0 0 0 0-2h-3v-3h7a2 2 0 0 0 2-2v-2H0Z"/></svg>
                <span id="sidebar_content_title">
                    Payment
                </span>
            </a>
            <a href="/logout" id="sidebar_content_item" class="flex items-center gap-4 font-varela text-white font-bold border border-white/0 hover:border-white w-full p-2 rounded-lg transition-all duration-300">
                <svg class="w-5 h-5 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path d="M20 9V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v7h20ZM0 11v2a2 2 0 0 0 2 2h7v3H6a1 1 0 0 0 0 2h8a1 1 0 0 0 0-2h-3v-3h7a2 2 0 0 0 2-2v-2H0Z"/></svg>
                <span id="sidebar_content_title">
                    logout
                </span>
            </a>
            <a href="/dashboard" id="sidebar_content_item" class="flex items-center gap-4 font-varela text-white font-bold border border-white/0 hover:border-white w-full p-2 rounded-lg transition-all duration-300">
                <svg class="w-5 h-5 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path d="M20 9V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v7h20ZM0 11v2a2 2 0 0 0 2 2h7v3H6a1 1 0 0 0 0 2h8a1 1 0 0 0 0-2h-3v-3h7a2 2 0 0 0 2-2v-2H0Z"/></svg>
                <span id="sidebar_content_title">
                    Profile
                </span>
            </a>
            <% if(data.admin) { %>
                <a href="/dashboard" id="sidebar_content_item" class="flex items-center gap-4 font-varela text-white font-bold border border-white/0 hover:border-white w-full p-2 rounded-lg transition-all duration-300">
                    <svg class="w-5 h-5 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path d="M20 9V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v7h20ZM0 11v2a2 2 0 0 0 2 2h7v3H6a1 1 0 0 0 0 2h8a1 1 0 0 0 0-2h-3v-3h7a2 2 0 0 0 2-2v-2H0Z"/></svg>
                    <span id="sidebar_content_title">
                        Patch Notes
                    </span>
                </a>
            <% } %>
        </div>
    </aside>
    <div class="w-full h-screen pl-12 pt-12">
        <h1 class="font-nunito font-bold text-6xl text-amber-700 tracking-tight">
            Dashboard
        </h1>
        <hr class="opacity-0 my-5">
        <div class="flex w-full gap-5 h-full">
            <div class="w-1/2 p-5 border h-1/3 rounded-2xl shadow-md bg-gradient-to-t from-rose-300 to-zinc-700 flex flex-col justify-between">
                <div class="flex justify-between items-center">
                    <h1 class="font-nunito font-bold text-4xl text-white">
                        Your experiences
                    </h1>
                    <% const account_status = "inactive";
                    
                    if(account_status == 'inactive'){
                    %>
                    <p class="w-auto p-2 rounded-full bg-red-600 font-nunito text-white flex items-center gap-2">
                        <svg class="w-6 h-6 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/></svg>
                        Inactive
                    </p>
                    <% } else { %>
                    <p class="w-auto p-2 rounded-full bg-green-600 font-nunito text-white flex items-center gap-2">
                        <svg class="w-6 h-6 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 21 21"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m6.072 10.072 2 2 6-4m3.586 4.314.9-.9a2 2 0 0 0 0-2.828l-.9-.9a2 2 0 0 1-.586-1.414V5.072a2 2 0 0 0-2-2H13.8a2 2 0 0 1-1.414-.586l-.9-.9a2 2 0 0 0-2.828 0l-.9.9a2 2 0 0 1-1.414.586H5.072a2 2 0 0 0-2 2v1.272a2 2 0 0 1-.586 1.414l-.9.9a2 2 0 0 0 0 2.828l.9.9a2 2 0 0 1 .586 1.414v1.272a2 2 0 0 0 2 2h1.272a2 2 0 0 1 1.414.586l.9.9a2 2 0 0 0 2.828 0l.9-.9a2 2 0 0 1 1.414-.586h1.272a2 2 0 0 0 2-2V13.8a2 2 0 0 1 .586-1.414Z"/></svg>
                        Active
                    </p>
                    <% } %>
                </div>
                <div class="flex justify-between items-center">
                    <div class="flex items-center gap-2">
                        <svg class="w-16 h-16 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path fill="currentColor" d="m18.774 8.245-.892-.893a1.5 1.5 0 0 1-.437-1.052V5.036a2.484 2.484 0 0 0-2.48-2.48H13.7a1.5 1.5 0 0 1-1.052-.438l-.893-.892a2.484 2.484 0 0 0-3.51 0l-.893.892a1.5 1.5 0 0 1-1.052.437H5.036a2.484 2.484 0 0 0-2.48 2.481V6.3a1.5 1.5 0 0 1-.438 1.052l-.892.893a2.484 2.484 0 0 0 0 3.51l.892.893a1.5 1.5 0 0 1 .437 1.052v1.264a2.484 2.484 0 0 0 2.481 2.481H6.3a1.5 1.5 0 0 1 1.052.437l.893.892a2.484 2.484 0 0 0 3.51 0l.893-.892a1.5 1.5 0 0 1 1.052-.437h1.264a2.484 2.484 0 0 0 2.481-2.48V13.7a1.5 1.5 0 0 1 .437-1.052l.892-.893a2.484 2.484 0 0 0 0-3.51Z"/><path fill="#fff" d="M8 13a1 1 0 0 1-.707-.293l-2-2a1 1 0 1 1 1.414-1.414l1.42 1.42 5.318-3.545a1 1 0 0 1 1.11 1.664l-6 4A1 1 0 0 1 8 13Z"/></svg>
                        <p class="text-white font-nunito font-bold text-6xl">
                            <% const exp = 1000; %><%= exp %><span class="text-2xl font-medium"><% remaining = 1500 - exp %>/1500</span>
                        </p>
                    </div>
                    <p class="font-nunito text-white tracking-tighter text-2xl">
                        <span class="font-bold">
                            <%= remaining %>
                        </span> remaining to level up!
                    </p>
                </div>
            </div>
            <div class="w-[500px] border h-1/3 rounded-2xl p-5">
                <div class="flex justify-between w-full items-center">
                    <h1 class="flex items-center gap-2 font-nunito font-bold text-rose-700 text-4xl">
                        <svg class="w-7 h-7 text-inherit" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 20"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m13 19-6-5-6 5V2a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v17Z"/></svg>
                        Your progress
                    </h1>
                    
                </div>
                <hr class="opacity-0 my-3">
                <h1 class="font-varela text-2xl font-bold text-zinc-700 italic">
                    Joki Mobile Legends
                </h1>
                <p class="font-varela text-zinc-700">
                    Nama Client
                </p>
            </div>
        </div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $('#sidebar_toggle').on("click", function() {
            if($('#sidebar_kiri').hasClass('closed')){
                $('#sidebar_kiri #sidebar_title').show();
                $('#sidebar_kiri #sidebar_content_item #sidebar_content_title').show();
                $('#sidebar_kiri').removeClass('closed');
            }else{
                $('#sidebar_kiri #sidebar_title').hide();
                $('#sidebar_kiri #sidebar_content_item #sidebar_content_title').hide();
                $('#sidebar_kiri').addClass('closed');
            }
        });
    </script>
    <script>
        if($('#sidebar_kiri #sidebar_content_item #sidebar_content_title').hasClass('active')){
            $('#sidebar_kiri #sidebar_content_item').removeClass('text-white');
            $('#sidebar_kiri #sidebar_content_item').addClass('text-zinc-800 bg-white');
        }else{
            $('#sidebar_kiri #sidebar_content_item').addClass('text-white');
            $('#sidebar_kiri #sidebar_content_item').removeClass('text-zinc-800 bg-white');
        }
        
    </script>

</body> 
</html>